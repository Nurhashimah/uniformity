- provide(:title, 'Company Details')
- model_class = Company
.page-header
  %h1= t 'companies.title', :default => model_class.model_name.human
%p#notice= notice
%dl.dl-horizontal
  %dt= t 'companies.name', :default => model_class.human_attribute_name(:name) + ":"
  %dd= @company.name
%dl.dl-horizontal
  %dt=  t 'companies.address', :default => model_class.human_attribute_name(:address) + ":"
  %dd= @company.address
%dl.dl-horizontal
  %dt= t 'companies.contact_person', :default => model_class.human_attribute_name(:contact_person) + ":"
  %dd= @company.contact_person
%dl.dl-horizontal
  %dt= t 'companies.phone', :default => model_class.human_attribute_name(:phone) + ":"
  %dd= @company.phone
%dl.dl-horizontal
  %dt= t 'companies.fax', :default => model_class.human_attribute_name(:fax) + ":"
  %dd= @company.fax
%dl.dl-horizontal
  %dt= t 'companies.email', :default => model_class.human_attribute_name(:email) + ":"
  %dd= @company.email


.form-actions
  = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), companies_path, :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), |
    edit_company_path(@company), :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
    companies_path(@company),                                                                                                    |
    :method => 'delete',                                                                                                           |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
    :class => 'btn btn-danger'                                                                                                     |
