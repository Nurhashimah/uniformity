%td
 .btn-group.dropdown
  %button.btn.dropdown-toggle{"data-toggle" => "dropdown"}
   .span.caret
  %ul.dropdown-menu.pull-right.action_menu
   %li= link_to content_tag(:li, fa_icon("eye", text: (t 'actions.show'))), company
   %li= link_to content_tag(:li, fa_icon("pencil", text: (t 'actions.edit'))), edit_company_path(company)
   %li.danger= link_to content_tag(:li, fa_icon("trash-o", text: (t 'actions.delete'))), company_path(company), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }