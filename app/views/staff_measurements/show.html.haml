- provide(:title, 'Staff_Measurement Issue Detail')
- model_class = StaffMeasurement
.page-header
  %h1= t '.title', :default => model_class.model_name.human
%p#notice= notice
%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:staff_id) + ":"
  %dd=  @staff_measurement.staff_id
%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:uniform_id) + ":"
  %dd=  @staff_measurement.uniform_id
%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:measurement_type) + ":"
  %dd=  @staff_measurement.measurement_type
%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:value) + ":"
  %dd= @staff_measurement.value
%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:unit_type_id) + ":"
  %dd= @staff_measurement.unit_type_id

.form-actions
  = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), staff_measurements_path, :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), |
    edit_staff_measurement_path(@staff_measurement), :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
    staff_measurement_path(@staff_measurement),                                                                                                    |
    :method => 'delete',                                                                                                           |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
    :class => 'btn btn-danger'                                                                                                     |
