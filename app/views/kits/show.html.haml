- provide(:title, 'Kit Detail')
- model_class = Kit
.page-header
  %h1= t '.title', :default => model_class.model_name.human
%p#notice= notice
%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:code) + ":"
  %dd=  @kit.code
%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:combo_code) + ":"
  %dd=  @kit.combo_code
%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:name) + ":"
  %dd=  @kit.name
%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:ancestry) + ":"
  %dd=  @kit.ancestry
%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:ancestry_depth) + ":"
  %dd=  @kit.ancestry_depth

.form-actions
  = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), kits_path, :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), |
    edit_kit_path(@kit), :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
    kit_path(@kit),                                                                                                    |
    :method => 'delete',                                                                                                           |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
    :class => 'btn btn-danger'                                                                                                     |
