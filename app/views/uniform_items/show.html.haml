- provide(:title, 'Uniform item Detail')
- model_class = UniformItem
.page-header
  %h1= t '.title', :default => model_class.model_name.human
%p#notice= notice
%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:code) + ":"
  %dd=  @uniform_item.code
%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:name) + ":"
  %dd=  @uniform_item.name
%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:notes) + ":"
  %dd=  @uniform_item.notes

.form-actions
  = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), uniform_items_path, :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), |
    edit_uniform_item_path(@uniform_item), :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
    uniform_item_path(@uniform_item),                                                                                                    |
    :method => 'delete',                                                                                                           |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
    :class => 'btn btn-danger'                                                                                                     |
