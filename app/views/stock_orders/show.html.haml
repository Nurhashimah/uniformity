- provide(:title, 'Stock Orders')
- model_class = StockOrder
.page-header
  %h1= t 'stock_orders.title', :default => model_class.model_name.human
%p#notice= notice
%dl.dl-horizontal
  %dt= t 'stock_orders.stock_id', :default => model_class.human_attribute_name(:stock_id) + ":"
  %dd= @stock_order.uniform_stock.try(:uniform_stock_details)
%dl.dl-horizontal
  %dt=  t 'stock_orders.quantity', :default => model_class.human_attribute_name(:quantity) + ":"
  %dd= @stock_order.quantity
%dl.dl-horizontal
  %dt= t 'stock_orders.unit_type_id', :default => model_class.human_attribute_name(:unit_type_id) + ":"
  %dd= @stock_order.unit_type.try(:description)
%dl.dl-horizontal
  %dt= t 'stock_orders.company_id', :default => model_class.human_attribute_name(:company_id) + ":"
  %dd= @stock_order.supplier.try(:name)
%dl.dl-horizontal
  %dt= t 'stock_orders.remark', :default => model_class.human_attribute_name(:remark) + ":"
  %dd= @stock_order.remark

.form-actions
  = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), stock_orders_path, :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), |
    edit_stock_order_path(@stock_order), :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
    stock_order_path(@stock_order),                                                                                                    |
    :method => 'delete',                                                                                                           |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
    :class => 'btn btn-danger'                                                                                                     |
