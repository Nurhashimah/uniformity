.container{:style => "padding-left: 60px;"}
  = form_for @unit_type, :html => { :class => 'form-horizontal' }  do |f|
    = render 'shared/error_messages', object: f.object
          
    .control-group
      = f.label :short_name, :class => 'control-label'
      .controls= f.number_field :short_name, :class => 'text_field input-xxlarge'

    .control-group
      = f.label :description, :class => 'control-label'
      .controls= f.number_field :description, :class => 'text_field input-xxlarge'

    .form-actions
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), |
        unit_types_path, :class => 'btn'     

