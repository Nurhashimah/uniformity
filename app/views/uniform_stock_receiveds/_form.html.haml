.container{:style => "padding-left: 60px;"}
  = form_for @uniform_stock_received, :html => { :class => 'form-horizontal' }  do |f|
    = render 'shared/error_messages', object: f.object
          
    .control-group
      = f.label :stock_id, :class => 'control-label'
      .controls= f.number_field :stock_id, :class => 'text_field input-xxlarge'
    
    .control-group
      = f.label :quantity, :class => 'control-label'
      .controls= f.number_field :quantity, :class => 'text_field input-xxlarge'

    .control-group
      = f.label :size, :class => 'control-label'
      .controls= f.text_field :size, :class => 'text_field input-xxlarge'

    .control-group
      = f.label :received_on, :class => 'control-label'
      .controls= f.date_select :received_on, :class => 'text_field input-xxlarge'

    .control-group
      = f.label :received_by, :class => 'control-label'
      .controls= f.number_field :received_by, :class => 'text_field input-xxlarge'

    .control-group
      = f.label :contract_id, :class => 'control-label'
      .controls= f.number_field :contract_id, :class => 'text_field input-xxlarge'

    .form-actions
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), |
        uniform_stock_receiveds_path, :class => 'btn'     

