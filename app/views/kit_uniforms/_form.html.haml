.container{:style => "padding-left: 60px;"}
  = form_for @kit_uniform, :html => { :class => 'form-horizontal' }  do |f|
    = render 'shared/error_messages', object: f.object
          
    .control-group
      = f.label :kit_id, :class => 'control-label'
      .controls= f.collection_select :kit_id, Kit.find(:all, :order => 'id ASC'), :id, :kit_details, :include_blank => 'Select Kit', :html_options => {:class => 'selectpicker'}
    
    .control-group
      = f.label :uniform_id, :class => 'control-label'
      .controls= f.collection_select :uniform_id, UniformItem.find(:all, :order => 'code, name ASC'), :id, :uniform_details, :include_blank => 'Select Uniform', :html_options => {:class => 'selectpicker'}

    .control-group
      = f.label :junior_rate, :class => 'control-label'
      .controls= f.text_field :quantity, :class => 'text_field input-xxlarge'

    .control-group
      = f.label :senior_rate, :class => 'control-label'
      .controls= f.text_field :senior_rate, :class => 'text_field input-xxlarge'

    .control-group
      = f.label :notes, :class => 'control-label'
      .controls= f.text_field :notes, :class => 'text_field input-xxlarge'

    .form-actions
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), |
        kit_uniforms_path, :class => 'btn'     

