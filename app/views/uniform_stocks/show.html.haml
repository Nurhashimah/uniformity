- provide(:title, 'Uniform_Stock Detail')
- model_class = UniformStock
.page-header
  %h1= t 'uniform_stocks.stock_id', :default => model_class.model_name.human
%p#notice= notice
%dl.dl-horizontal
  %dt=t 'uniform_stocks.uniform_id', :default => model_class.human_attribute_name(:uniform_id) + ":"
  %dd=  @uniform_stock.uniform_item.uniform_details
%dl.dl-horizontal
  %dt= t 'uniform_stocks.size', :default =>model_class.human_attribute_name(:size) + ":"
  %dd=  @uniform_stock.size
%dl.dl-horizontal
  %dt= t 'uniform_stocks.category', :default =>model_class.human_attribute_name(:category) + ":"
  %dd= @uniform_stock.category
%dl.dl-horizontal
  %dt= t 'uniform_stocks.max_quantity', :default =>model_class.human_attribute_name(:max_quantity) + ":"
  %dd=@uniform_stock.max_quantity
%dl.dl-horizontal
  %dt= t 'uniform_stocks.min_quantity', :default =>model_class.human_attribute_name(:min_quantity) + ":"
  %dd=@uniform_stock.min_quantity
%dl.dl-horizontal
  %dt= t 'uniform_stocks.unit_type_id', :default =>model_class.human_attribute_name(:unit_type_id ) + ":"
  %dd= check_kin {@uniform_stock.unit_type.short_name}

.form-actions
  = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), uniform_stocks_path, :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), |
    edit_uniform_stock_path(@uniform_stock), :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
    uniform_stock_path(@uniform_stock),                                                                                                    |
    :method => 'delete',                                                                                                           |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
    :class => 'btn btn-danger'                                                                                                     |
