- provide(:title, 'Kit Staff')
- model_class = KitStaff
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize
  
  
.navbar.navbar-inverse
  .navbar-inner
    %ul.nav
      %li= link_to content_tag(:li, fa_icon("asterisk", text: "New Kit Staff")), new_kit_staff_path
    %ul.nav.pull-right
      %li#toga= link_to content_tag(:li, fa_icon("search", text: "Search")), "#"
      %li= link_to content_tag(:li, fa_icon("print", text: "Print")), "#"
      
      
%table.table.table-condensed.table-hover
  %thead
    %tr
      %th Kit
      %th Staff
      %th Staff group
      %th 

  %tbody
    - @kit_staffs.each do |kit_staff|
      %tr
        %td= kit_staff.kit_id
        %td= kit_staff.staff_id
        %td= kit_staff.staff_group_id
        = render :partial => 'action_menu', :locals => { :kit_staff => kit_staff }
      
      
