.container{:style => "padding-left: 60px;"}
  = form_for @kit_staff, :html => { :class => 'form-horizontal' }  do |f|
    = render 'shared/error_messages', object: f.object
          
    .control-group
      = f.label :kit_id, :class => 'control-label'
      .controls= f.number_field :kit_id, :class => 'text_field input-xxlarge'
    
    .control-group
      = f.label :staff_id, :class => 'control-label'
      .controls= f.number_field :staff_id, :class => 'text_field input-xxlarge'

    .control-group
      = f.label :staff_group_id, :class => 'control-label'
      .controls= f.number_field :staff_group_id, :class => 'text_field input-xxlarge'

    .form-actions
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), |
        kit_staffs_path, :class => 'btn'     

